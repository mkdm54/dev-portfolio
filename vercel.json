{
    "version": 2,
    "builds": [
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/contact/send",
            "dest": "/api/sendEmail.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}